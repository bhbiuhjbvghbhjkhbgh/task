    <h6>Name</h6>
  </div>
  <div class="d-flex align-items-center justify-content-center">
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="d-flex align-items-center justify-content-center">
    <h6>Image</h6>
  </div>
  <div class="d-flex align-items-center justify-content-center">
     <%= f.file_field :profile_image %>
  </div>
  <div class="d-flex align-items-center justify-content-center">
    <h6>introduction</h6>
  </div>
  <div class="d-flex align-items-center justify-content-center">
    <%= f.text_area :introduction, autofocus: true %>
  </div>
  <div class="d-flex align-items-center justify-content-center">
    <%= f.submit "Update User" %>
  </div>
  <div class="d-flex align-items-center justify-content-center">
