<div class = "container">
  <div class = "row">
   <%= render 'books/list', book: @book, user_id: @user_id %>
    <div class = "col-lg-8">
      <h1>Books</h1>
      <table class = "table table-striped">
        <tbody>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |f| %>
           <tr>
            <td><%= image_tag current_user.get_profile_image %></td>
            <td>
                <%= link_to  f.title, book_path(f) %>
            </td>
            <td>
                <%= f.body %>
            </td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>