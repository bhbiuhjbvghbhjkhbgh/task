
    <div class = "col-lg-4">

      <h1>User info</h1>
      <%= image_tag user_id.get_profile_image %>
      <table class = "table table-striped">
       <tbody>
         <tr>
           <th>
             name
           </th>
           <th>
             <%= user_id.name %>
           </th>
         </tr>
         <tr>
           <th>
             introduction
           </th>
           <th>
             <%= user_id.introduction %>
           </th>
         </tr>
       </tbody>
      </table>
      <button type = "button" class = "btn  btn-light btn-block">
       <%= link_to icon('fas','user-gear'), edit_user_path(user_id) %>
      </button>
      <h1>New Book</h1>
      <%= form_with model: book, method: :post do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>

      <% end %>
    </div>