<div class = "container">
 <div class = "row">
  <%= render 'books/list', book: @book, user_id: @user_id %>
  <div class = "col-lg-8">
     <h1>Book detail</h1>
     <table>
      <tbody>
           <tr>
            <td>
              <%= image_tag current_user.get_profile_image, size: "100x100" %>
              <%= link_to @book_params.title, book_path %>
              <%= @book_params.body %>
              <% if @book_params.user == current_user %>
                <button type = "button" class = "btn  btn-info">
                  <%= link_to "Edit", edit_book_path(@book_params) %>
                </button>
                <button type = "button" class = "btn  btn-success">
                  <%= link_to "Destroy", book_path(@book_params), method: :delete  %>
                </button>
              <% end %>
              <p><%= link_to @user_id.name, user_path(current_user.id) %></p>
            </td>
           </tr>
      </tbody>
     </table>
  </div>
 </div>
</div>

